<% if action == :new %>
  <% action_url = '/cats' %>
<% else %>
  <% action_url = cat_url(cat) %>
<% end %>
<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>  
    <label> 
      Name 
      <input type="text" name="cat[name]" value="<%= cat.name %>">
    </label>
    <br>
    <label> 
      Color
      <select name="cat[color]">
      <option value="chrome" selected>Select a Color</option>
      <% Cat::COLORS.each do |color|  %> 
        <option value="<%= color %>"> <%= color %> </option>
      <% end %>
      </select>
      </label>
    <br>
    <label> 
      Sex 
      
      <input type="radio" name="cat[sex]" value="F" checked>Female
      <input type="radio" name="cat[sex]" value="M">Male
    </label>
    <br>
    <label> 
      Date 
      <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
    </label>
    <br>
    <label> 
      Description <br>
      <textarea name="cat[description]" rows="8" cols="80"><%= cat.description %></textarea>
    </label>
    <br>
    
    <input type="submit" value="MAKE THIS CAT">
</form>